# Backend Django .env example
# Note: Do not commit real secrets.

# Database: Set these to enable PostgreSQL (recommended).
# If any of these are missing, the backend falls back to SQLite automatically.
DB_HOST=localhost
DB_PORT=5001
DB_NAME=emoji_ttt
DB_USER=postgres
DB_PASSWORD=postgres_password

# Server settings (used when running the dev server)
DJANGO_DEBUG=1
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,testserver
